<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#123a30"
    tools:context="com.example.ahmetserdargeze.koinplusapp.Fragments.LoginFragment"
    
    >
    <ImageView
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_margin="25px"
        android:layout_gravity="center"
        android:src="@drawable/dolar"
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:background="@android:color/transparent"
        android:textColor="#a4de9a"
        android:text="KoinPlusAPP"
        android:fontFamily="@font/bitter_bold"/>


    <EditText
        android:id="@+id/userEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/bitter_bold"
        android:alpha="0.70"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColorHint="#a4de9a" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:textColorHint="#a4de9a"
        android:ems="10"
        android:fontFamily="@font/bitter_bold"
        android:alpha="0.70"
        android:inputType="textPassword"
        android:hint="Password"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/lf_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/bitter_bold"
        android:alpha="0.70"
        android:textColor="#a4de9a"

        android:layout_gravity="center"
        android:text="Login"
        />

    <TextView
        android:id="@+id/lf_noaccount_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:alpha="0.30"
        android:background="@android:color/transparent"
        android:textColor="#a4de9a"
        android:text="No Account yet?Create one"
        android:fontFamily="@font/bitter_bold"/>
</LinearLayout>
