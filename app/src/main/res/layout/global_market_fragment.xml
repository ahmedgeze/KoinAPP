<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="11"
    tools:context="com.example.ahmetserdargeze.koinplusapp.Fragments.Global_market_fragment">

    <LinearLayout
        android:background="#f97900"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/usdt_tv_global"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="USDT" />

            <TextView
                android:id="@+id/btc_tv_global"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="BTC" />


            <TextView
                android:id="@+id/eth_tv_global"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ETH" />

            <ImageView
                android:id="@+id/star_iv_global"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/starnew_gl" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:background="@color/layout_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="22"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:textAlignment="center"
                android:layout_margin="8dp"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Coin"/>

            <TextView
                android:textAlignment="center"
                android:layout_margin="8dp"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Price"/>

            <TextView
                android:textAlignment="center"
                android:layout_margin="8dp"
                android:layout_width="0dp"
                android:layout_weight="8.8"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Volume"/>

            <TextView
                android:textAlignment="center"
                android:layout_margin="8dp"
                android:layout_width="0dp"
                android:layout_weight="3.2"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Change"/>



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/global_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/global_market_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </android.support.v7.widget.RecyclerView>


        </ScrollView>


    </LinearLayout>


</LinearLayout>